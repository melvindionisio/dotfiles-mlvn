lazytouch() {
	touch $1
	open $1
}

alias gint="git init"
alias gs="git status"
alias ga="git add"
alias gaa="git add ."
alias gc="git commit -m $1"
alias glgr="git log --raw"
alias gdiff="git diff"
alias gpush="git push origin master"
alias glg="git log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

alias glgg="git log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all"

alias g="git"
alias cls="clear"
alias vi="nvim"
alias xx="exit"
alias src="source"
alias py="python3"
alias ignoreexceptcurrent="git status --porcelain | grep '^??' | cut -c4- >> .gitignore"
alias ignoreinit="touch .gitignore && echo -e '#Mac/OSX\n.DS_Store' >> .gitignore"
alias lah="ls -a"
alias la="ll -a"

alias dev="cd ~/Developer"
alias up="cd .."
alias root="cd ~"
